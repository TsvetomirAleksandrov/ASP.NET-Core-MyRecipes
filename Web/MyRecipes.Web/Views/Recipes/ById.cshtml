@using MyRecipes.Common
@model MyRecipes.Web.ViewModels.Recipes.SingleRecipeViewModel
@{
    this.ViewData["Title"] = Model.Name;
}


<div class="single-recipe-layout1">
    <div class="ctg-name">@Model.CategoryName</div>
    <h2 class="item-title">@this.ViewData["Title"]</h2>

    <div class="row mb-4">
        <div class="col-xl-9 col-12">
            <ul class="entry-meta">
                <li class="single-meta">
                    <i class="far fa-calendar-alt"></i>
                    @Model.CreatedOn.ToShortDateString()
                </li>
                <li class="single-meta">

                    <i class="fas fa-user"></i>
                    @if (string.IsNullOrWhiteSpace(Model.AddedByUserUserName))
                    {
                        <a href="@Model.OriginalUrl" target="_blank">Създадено от recepti.gotvach.bg</a>
                    }
                    else
                    {
                        <span>Създадено от @Model.AddedByUserUserName</span>
                    }


                </li>
                <li class="single-meta">
                    <ul class="item-rating">
                        <li class="star-fill"><i class="fas fa-star"></i></li>
                        <li class="star-fill"><i class="fas fa-star"></i></li>
                        <li class="star-fill"><i class="fas fa-star"></i></li>
                        <li class="star-fill"><i class="fas fa-star"></i></li>
                        <li class="star-empty"><i class="fas fa-star"></i></li>
                        <li><span>4.5<span> / 5</span></span> </li>
                    </ul>
                </li>
            </ul>
        </div>
        
    <div class="item-figure">
        <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
    </div>
    <div class="item-feature">
        <ul>
            <li>
                <div class="feature-wrap">
                    <div class="media">
                        <div class="feature-icon">
                            <i class="far fa-clock"></i>
                        </div>
                        <div class="media-body space-sm">
                            <div class="feature-title">Приготвяне:</div>
                            <div class="feature-sub-title">@Model.PreparationTime.TotalMinutes Минути</div>
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="feature-wrap">
                    <div class="media">
                        <div class="feature-icon">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <div class="media-body space-sm">
                            <div class="feature-title">Готвене:</div>
                            <div class="feature-sub-title">@Model.CookingTime.TotalMinutes Минути</div>
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="feature-wrap">
                    <div class="media">
                        <div class="feature-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="media-body space-sm">
                            <div class="feature-title">Порции:</div>
                            <div class="feature-sub-title">
                                @Model.PortionsCount
                                @if (Model.PortionsCount == 1)
                                {
                                    <span>Порция</span>
                                }
                                else
                                {
                                    <span>Порции</span>
                                }
                                                    </div>
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="feature-wrap">
                    <div class="media">
                        <div class="feature-icon">
                            <i class="far fa-clone"></i>
                        </div>
                        <div class="media-body space-sm">
                            <div class="feature-title">Подобни:</div>
                            <div class="feature-sub-title">@Model.CategoryRecipesCount</div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>

    <div class="making-elements-wrap">
        <div class="row">
            <div class="col-md-6">
                <p class="item-description">
                   @Model.Instructions
                </p>
            </div>
            <div class="col-md-6">
                <div class="ingridients-wrap">
                    <h3 class="item-title"><i class="fas fa-list-ul"></i>Съставки</h3>
                    @foreach (var ingredient in Model.Ingredients)
                    {
                <div class="checkbox checkbox-primary">
                    <label for="checkbox1">@ingredient.Quantity @ingredient.IngredientName</label>
                </div>
                    }
                    
                    
                </div>
            </div>
        </div>
    </div>
</div>